{
  "workbench.startupEditor": "none",
  "window.commandCenter": false,
  "workbench.panel.showLabels": false,
  "workbench.activityBar.location": "top",
  "editor.renderWhitespace": "all",
  "editor.mouseWheelZoom": true,
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.editor.enablePreview": false,
  "editor.comments.ignoreEmptyLines": false,
  "editor.guides.indentation": true,
  "editor.wrappingIndent": "none",
  "files.trimTrailingWhitespaceInRegexAndStrings": false,
  "editor.largeFileOptimizations": false,
  "editor.tabSize": 2,
  "editor.guides.bracketPairs": "active",
  "extensions.ignoreRecommendations": true,
  "editor.minimap.enabled": false,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "line",
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "cpp": "clear && g++ -g $fileName -o $fileNameWithoutExt && ./$fileNameWithoutExt"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "terminal.integrated.mouseWheelZoom": true,
  "terminal.integrated.fontSize": 15,
  "editor.trimAutoWhitespace": false,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "explorer.confirmDelete": false,
  "chat.commandCenter.enabled": false,
  "editor.stickyScroll.enabled": false,
  "C_Cpp.default.cppStandard": "c++20",
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.clangTidy.path": "C:\\Program Files\\LLVM\\bin\\clang-tidy.exe",
  "C_Cpp.codeAnalysis.clangTidy.args": [
    "--checks=-*,clang-diagnostic-unused-variable,clang-diagnostic-unused-function"
  ],
  "[verilog]": {
    "editor.formatOnSave": false,
    "editor.formatOnType": false
  },
  "[systemverilog]": {
    "editor.formatOnSave": false,
    "editor.formatOnType": false
  },
  "C_Cpp.formatting": "disabled",
  "clang-format.executable": "",
  "editor.multiCursorLimit": 100000,
  "window.enableMenuBarMnemonics": false,
  "window.customMenuBarAltFocus": false
}
